<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph">


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.tkacik.lightstream.view.fragments.SearchFragment"
        android:label="fragment_searchfragment"
        tools:layout="@layout/fragment_searchfragment">
        <action
            android:id="@+id/goToList"
            app:destination="@+id/listDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/listDisplayFragment"
        android:name="com.tkacik.lightstream.view.fragments.ListDisplayFragment"
        android:label="fragment_listdisplayfragment"
        tools:layout="@layout/fragment_listdisplayfragment">
        <action
            android:id="@+id/goToDetail"
            app:destination="@+id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.tkacik.lightstream.view.fragments.DetailFragment"
        android:label="fragment_detailsfragment"
        tools:layout="@layout/fragment_detailsfragment">
        <argument
            android:name="detailsContainer"
            app:argType="com.tkacik.lightstream.model."/>

    </fragment>


</navigation>